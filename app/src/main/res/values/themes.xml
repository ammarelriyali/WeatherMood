<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherMood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/white</item>


        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WeatherMood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherMood.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.WeatherMood.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


<style name="Theme.WeatherMood.card_home" parent="CardView">
    <item name="cardBackgroundColor">@color/card_light</item>
</style>
</resources>